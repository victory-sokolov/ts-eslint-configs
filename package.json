{
  "name": "ts-eslint-configs",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/victory-sokolov/ts-eslint-configs",
  "author": "Viktor Sokolov",
  "license": "MIT",
  "scripts": {
    "start": "npm start",
    "build": "npm build",
    "lint": "eslint '.src/**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "test:coverage": "npm run test -- --coverage",
    "check-updates": "ncu -u",
    "commit": "clear && git-cz",
    "preinstall": "$npm_execpath --silent run checkyarn",
    "checkyarn": "echo \"$npm_execpath\" | grep -q \"yarn\\.js$\" || (echo '⚠️  Use yarn not npm! ⚠️ ' && echo && exit 1)"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^27.3.1",
    "detect-secrets": "^1.0.6",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx|mjs)$": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged detect-secrets-launcher src/**/*.{js,jsx,tsx,ts}"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}": [
      "npm run format",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
